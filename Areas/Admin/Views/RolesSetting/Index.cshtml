
@{
    ViewBag.Title = "Quyền Truy Cập";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script type="text/template" id="rolesettingTemplate">
        <tr>
            <td class="text-center" data-bind="text: $index()+1"></td>
            <td class="text-center" data-bind="text: Code"></td>
            <td data-bind="text: Name"></td>
            <td data-bind="text: Des"></td>
            <td class="text-center">
                <a data-original-title="Edit" data-placement="top" class="btn btn-sm btn-primary tooltips" href="javascript:;" data-bind="click: $parent.showEdit"><i class="fa fa-edit"></i></a>
                <a data-original-title="Delete" data-placement="top" class="btn btn-sm btn-danger tooltips" href="javascript:;" data-bind="click: $parent.delete"><i class="fa fa-times fa fa-white"></i></a>
            </td>
        </tr>
    </script>
    <script type="text/javascript">
        var naviactive = "rolesetting";
        var listRolesSetting = @Html.Raw(ViewBag.listRolesSetting);
        require(["viewmodels/RolesSetting/rolesettings-viewmodel", "jqueryValidate"]);
    </script>
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="#">Home</a>
                </li>

                <li>
                    <a href="#">Cấu hình</a>
                </li>
                <li class="active">Quyền truy cập</li>
            </ul>
            <!-- /.breadcrumb -->
                        
        </div>

        <div class="page-content">
            <div class="page-header">
                <div class="clearfix">
                    <div class="pull-left">
                        <h1> Quyền truy cập </h1>

                    </div>
                    <div class="pull-right tableTools-container">
                        <button data-bind="click: showAdd" class="btn btn-white btn-success btn-bold">
                            <i class="ace-icon fa fa-plus bigger-120 green"></i>
                            Thêm mới
                        </button>
                    </div>
                </div>
            </div>
            <!-- PAGE CONTENT BEGINS -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-header">
                        Results for "Latest Registered Domains"
                    </div>

                    <!-- div.table-responsive -->
                    <!-- div.dataTables_borderWrap -->
                    <div>
                        <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr role="row">
                                    <th class="text-center">STT</th>
                                    <th class="text-center">Code</th>
                                    <th class="text-center">Name</th>
                                    <th class="text-center">Description</th>
                                    <th class="text-center"><i class="fa fa-cog"></i></th>
                                </tr>
                            </thead>

                            <tbody data-bind="template: { name: 'rolesettingTemplate', foreach: $root.listRolesSetting }"></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- PAGE CONTENT ENDS -->
            <!-- Modal -->
            <div class="modal fade" id="addOrEditForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title" id="myModalLabel">Quyền truy cập</h4>
                        </div>
                        <div class="modal-body">
                            <form class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Mã Quyền </label>

                                    <div class="col-sm-9">
                                        <input type="text" data-bind="value: code" id="form-field-1" placeholder="Mã Quyền" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Tên </label>

                                    <div class="col-sm-9">
                                        <input type="text" data-bind="value: name" id="form-field-1" placeholder="Tên" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Nội dung </label>
                                    <div class="col-sm-9">
                                        <textarea type="text" data-bind="value: description" class="form-control"> </textarea>
                                    </div>
                                </div>

                                <div class="space-4"></div>

                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-bind="disable: isSending, click: save">
                                <i class="fa fa-spinner fa-pulse" data-bind="visible: isSending"></i>
                                <i class="fa fa-save" data-bind="visible: !isSending()"></i>&nbsp;
                                Lưu
                            </button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.page-content -->
    </div>
</div><!-- /.main-content -->

