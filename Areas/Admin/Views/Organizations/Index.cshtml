@{
    ViewBag.Title = "Cơ quan ban hành";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section scripts {
    <script type="text/template" id="organizationTemplate">
        <tr>
            <td class="text-center" data-bind="text: (($parent.recordPerPage * $parent.currentPage) - $parent.recordPerPage) + $index() + 1"></td>
            <td class="text-center" data-bind="text: Code"></td>
            <td data-bind="text: Name"></td>
            <td data-bind="text: Des"></td>
            <td class="text-center">
                <a data-original-title="Edit" data-placement="top" class="btn btn-sm btn-primary tooltips" href="javascript:;" data-bind="click: $parent.showEdit"><i class="fa fa-edit"></i></a>
                <a data-original-title="Delete" data-placement="top" class="btn btn-sm btn-danger tooltips" href="javascript:;" data-bind="click: $parent.delete"><i class="fa fa-times fa fa-white"></i></a>
            </td>
        </tr>
    </script>
    <script type="text/javascript">
        var naviactive = "organization";
        var listOrganizations = @Html.Raw(ViewBag.listOrganizations);
        require(["jqueryPager","viewmodels/Organization/organization-viewmodel", "jqueryValidate"]);
    </script>
}
<div class="main-content-inner">
    <div class="breadcrumbs ace-save-state" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
            </li>
            <li class="active">Cơ quan ban hành</li>
        </ul>
    </div>

    <div class="page-content">
        <div class="page-header">
            <div class="clearfix">
                @*<div class="pull-left">
                    <h1> Cơ quan ban hành </h1>

                </div>*@
                <div class="pull-left tableTools-container">
                    <button data-bind="click: showAdd" class="btn btn-white btn-success btn-bold">
                        <i class="ace-icon fa fa-plus bigger-120 green"></i>
                        Thêm mới
                    </button>
                </div>
            </div>
        </div>

        <!-- PAGE CONTENT BEGINS -->
        <div class="row">
            <div class="col-xs-12">
                <div class="table-header" data-bind="text: 'Danh sách cơ quan ban hành'"></div>
                <div>
                    <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                        <thead class="flip-content">
                            <tr role="row">
                                <th class="text-center">STT</th>
                                <th class="text-center">Mã CQBH</th>
                                <th class="text-center">Tên CQBH</th>
                                <th class="text-center">Trích lược</th>
                                <th class="text-center"><i class="fa fa-cog"></i></th>
                            </tr>
                        </thead>
                        <tbody data-bind="template: { name: 'organizationTemplate', foreach: $root.listOrganization }"></tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-md-5 col-sm-5">
                        @*<div id="sumarypager" class="dataTables_info"></div>*@
                    </div>
                    <div class="col-md-7 col-sm-7">
                        <div id="pager" class="dataTables_paginate paging_bootstrap_full_number"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- PAGE CONTENT ENDS -->
        <!-- Modal -->
        <div class="modal fade" id="addOrEditForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" action="post">
            <div class="modal-dialog" role="document">
                <form class="form-horizontal" role="form">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title" id="myModalLabel">Phòng ban</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Kí hiệu </label>
                                <div class="col-sm-9">
                                    <input type="text" id="form-field-1" data-bind="value: code" placeholder="Kí hiệu" name="tdocument" class="form-control" />
                                </div>
                            </div>
                            <div class="space-4"></div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Tên Cơ quan </label>
                                <div class="col-sm-9">
                                    <input type="text" id="form-field-1" data-bind="value: name" placeholder="Tên" name="tdocument" class="form-control" />
                                </div>
                            </div>
                            <div class="space-4"></div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1-1"> Trích lược </label>
                                <div class="col-sm-9">
                                    <input type="text" id="form-field-1-1" data-bind="value: des" placeholder="Trích lược" class="form-control" />
                                </div>
                            </div>
                            <div class="space-4"></div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-bind="disable: isSending, click: save">
                                <i class="fa fa-spinner fa-pulse" data-bind="visible: isSending"></i>
                                <i class="fa fa-save" data-bind="visible: !isSending()"></i>&nbsp;
                                Lưu
                            </button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div><!-- /.page-content -->
</div>
